{
  "compilerOptions": {
//    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "outDir": "build/dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "build/dist/*"
      ]
    },
    "lib": ["dom", "es2016", "es2017.object"]
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src/**/*"
  ]
}