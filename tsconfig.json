{
  "compilerOptions": {
//    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "outDir": "build/dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "build/dist/*"
      ]
    },
    "lib": ["es2017", "esnext.array", "dom"],
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src/**/*"
  ]
}